<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--昼夜模式主色调-->
<attr name="dayNightBackground" format="color|reference" />
<attr name="dayNightOneTextColor" format="color|reference" />
<attr name="dayNightTwoTextColor" format="color|reference" />
<attr name="dayNightThreeTextColor" format="color|reference" />
<attr name="dayNightBackgroundDrawable" format="color|reference" />

<declare-styleable name="DayNightMode">
    <attr name="dayNightBackgroundAttr" format="string|reference"/><!--切换背景属性-->
    <attr name="dayNightOneTextColorAttr" format="string|reference"/><!--切换一级字体颜色属性-->
    <attr name="dayNightTwoTextColorAttr" format="string|reference"/><!--切换二级字体颜色属性-->
    <attr name="dayNightThreeTextColorAttr" format="string|reference"/><!--切换三级字体颜色属性-->
    <attr name="dayNightBackgroundDrawableAttr" format="string|reference"/><!--切换背景图片属性-->
</declare-styleable>
    <declare-styleable name="IRecyclerView">
        <attr name="refreshHeaderLayout" format="reference" />
        <attr name="loadMoreFooterLayout" format="reference" />
        <attr name="refreshEnabled" format="boolean" />
        <attr name="loadMoreEnabled" format="boolean" />
        <attr name="refreshFinalMoveOffset" format="dimension" />
    </declare-styleable>
    <declare-styleable name="LoadingView">
        <attr name="loadding_color" format="color" />
        <attr name="ring_style" format="enum">
            <enum name="square" value="0" />
            <enum name="round" value="1" />
        </attr>
        <attr name="progress_style" format="enum">
            <enum name="material" value="0" />
            <enum name="linear" value="1" />
        </attr>

        <attr name="ring_width" format="dimension" />
        <attr name="ring_radius" format="dimension" />
    </declare-styleable>


    <declare-styleable name="EasyRatingBar">
        <attr name="rateNum" format="integer"/>
        <attr name="rating" format="integer"/>
        <attr name="rateNormal" format="reference"/>
        <attr name="rateSelect" format="reference"/>
        <attr name="rateInterval" format="dimension"/>
        <attr name="isIndicator" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="BookTextView">
        <attr name="bookColor" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="layout_refresh_empty" format="reference"/>
        <attr name="layout_refresh_error" format="reference"/>
        <attr name="layout_refresh_loading" format="reference"/>
    </declare-styleable>


    <declare-styleable name="ScrollRefreshLayout">
        <attr name="layout_scroll_empty" format="reference"/>
        <attr name="text_error_tip" format="string"/>
    </declare-styleable>
    <declare-styleable name="SuperCircleView">

        <!-- 圆的半价 -->
        <attr name="min_circle_radio" format="integer"></attr>

        <!-- 圆环的宽度 -->
        <attr name="circle_width" format="float"></attr>

        <!-- 分成几段 -->
        <attr name="select" format="integer"></attr>

        <!-- 每段间隔的角度 -->
        <attr name="selec_angle" format="integer"></attr>

        <!-- 圆的颜色 -->
        <attr name="circle_color" format="color"></attr>

        <!-- 圆的颜色 -->
        <attr name="max_circle_color" format="color"></attr>

        <!-- 圆环的默认颜色 -->
        <attr name="ring_normal_color" format="color"></attr>

        <!-- 圆环要显示的彩色的区域-->
        <attr name="ring_color_select" format="integer"></attr>

        <!-- 是否显示断 -->
        <attr name="is_show_select" format="boolean"></attr>
    </declare-styleable>
</resources>