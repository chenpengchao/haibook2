<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">
        <com.hyjz.hnovel.weight.CircleImageView
            android:layout_width="30dp"
            android:id="@+id/cv_comment"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:id="@+id/tv_comment_name"
            android:textColor="#1F1F1F"
            android:text="追风的小少年"
            android:maxLength="4"
            android:includeFontPadding="false"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/book_friend" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/vip_nonactive" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:background="@mipmap/earn_level"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="7dp"
                android:text="嗨赚Lv32"
                android:id="@+id/tv_comment_vip"
                android:textColor="@color/white"
                android:textSize="9sp" />

        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
       <ImageView
           android:layout_width="wrap_content"
           android:src="@mipmap/top_apex"
           android:layout_marginRight="5dp"
           android:layout_marginTop="23dp"
           android:visibility="gone"
           android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/top_essence"
            android:visibility="gone"
            android:layout_marginTop="23dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--评论内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:maxLines="3"
            android:id="@+id/tv_commnet_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <!--评论的时间和评论的书-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="18dp"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="2019.2.22"
            android:id="@+id/tv_comment_time"
            android:textSize="12sp"
            android:textColor="#A1A1A1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="《大主宰》"
            android:id="@+id/tv_book_title"
            android:textSize="12sp"
            android:textColor="#A1A1A1"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>