<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegesterAc">
    <!--注册界面-->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher_login" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_logo"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="嗨小说"
                android:textColor="#27a1fc"
                android:textSize="14sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="296dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/corner_four"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:src="@mipmap/telephone"
                android:layout_marginLeft="15dp"
                android:layout_height="16dp" />

            <View
                android:layout_width="1px"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e7ea" />
            <EditText
                android:id="@+id/et_nickName"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:hint="请输入昵称"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:textColor="@color/black"

                android:textColorHint="#c0c0c7"
                android:textSize="14sp" />
            <!--<View-->
            <!--android:background="#9b9b9b"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.6dp"></View>-->


        </LinearLayout>
        <LinearLayout
            android:layout_width="296dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/corner_four"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:src="@mipmap/telephone"
                android:layout_marginLeft="15dp"
                android:layout_height="16dp" />

            <View
                android:layout_width="1px"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e7ea" />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:textColor="@color/black"

                android:textColorHint="#c0c0c7"
                android:textSize="14sp" />
            <!--<View-->
            <!--android:background="#9b9b9b"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.6dp"></View>-->


        </LinearLayout>
        <LinearLayout
            android:layout_width="296dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/corner_four"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:src="@mipmap/verification"
                android:layout_marginLeft="15dp"
                android:layout_height="16dp" />

            <View
                android:layout_width="1px"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e7ea" />
            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:textColor="@color/black"

                android:textColorHint="#c0c0c7"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_verifcode"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:gravity="center"
                android:text="获取验证码"
                android:padding="2dp"
                android:background="@drawable/corner_banyuan_kongxin"
                android:textColor="#00a1ff"
                android:textSize="12sp" />
            <!--<View-->
            <!--android:background="#9b9b9b"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.6dp"></View>-->


        </LinearLayout>
        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/corner_four"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:src="@mipmap/password_edit"
                android:layout_marginLeft="15dp"
                android:layout_height="16dp" />
            <View
                android:layout_width="1px"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e7ea" />
            <EditText
                android:id="@+id/et_newpwd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="#c0c0c7"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/corner_four"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:src="@mipmap/password_edit"
                android:layout_marginLeft="15dp"
                android:layout_height="16dp" />
            <View
                android:layout_width="1px"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:background="#e3e7ea" />
            <EditText
                android:id="@+id/et_pass_word"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="#c0c0c7"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/corner_four"
            android:orientation="horizontal">
            <!--<ImageView-->
            <!--android:layout_width="16dp"-->
            <!--android:src="@mipmap/password_edit"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_height="16dp" />-->
            <!--<View-->
            <!--android:layout_width="1px"-->
            <!--android:layout_height="16dp"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:background="#e3e7ea" />-->
            <EditText
                android:id="@+id/et_yaoqing_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入邀请码"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="#c0c0c7"
                android:textSize="14sp" />
        </LinearLayout>
        <!--<TextView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="@dimen/px64"-->
        <!--android:layout_marginTop="@dimen/px10"-->
        <!--android:text="(请在60秒内完成验证，超时请点击重新发送)"-->
        <!--android:textColor="@color/retriver_text"-->
        <!--android:textSize="@dimen/sp22" />-->
        <Button
            android:id="@+id/tv_next"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/corner_banyuan"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
</LinearLayout>