<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="88dp"
        android:layout_margin="7.5dp"
        android:id="@+id/item_recharge_book_coin_ll"
        android:background="@drawable/circle_recharge_book_coin_eight"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--充值金额-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_rech_book_iv_ishot"
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="3dp"
                android:includeFontPadding="false"
                android:text="￥"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:text="6"
                android:id="@+id/item_recharge_book_coin_money"
                android:textColor="#333333"
                android:textSize="18sp" />
        </LinearLayout>
        <!--充值的书币-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600书币"
                android:id="@+id/item_recharge_book_coin_tv_coin"
                android:includeFontPadding="false"
                android:textColor="#F9AF34"

                android:textSize="11sp" />
        </LinearLayout>
        <!--赠送的书券-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/present_ticket"
                android:id="@+id/item_recharge_book_coin_iv_zengsong"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="600书券"
                android:layout_marginLeft="5dp"
                android:id="@+id/item_recharge_book_coin_tv_ticket"
                android:textColor="#333333"
                android:textSize="8sp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/item_recharge_book_coin_first"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>