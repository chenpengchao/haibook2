<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--支付宝或者微信充值-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="horizontal">
        <!--微信支付-->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="58dp"
            android:id="@+id/ll_recharge_book_coin_wechat"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle_eight_grey"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信" />


        </LinearLayout>

        <!--支付宝支付-->
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="58dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/ll_recharge_book_coin_alipay"
            android:background="@drawable/circle_eight_grey"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_alipay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信" />


        </LinearLayout>
        <TextView
            android:layout_width="86dp"
            android:text="立即充值"
            android:textColor="@color/white"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="19dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_six_red"
            android:layout_height="42dp" />
    </LinearLayout>
    <!--充值说明-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="充值说明"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="1.嗨小说充值赠送的书券，仅限嗨小说平台使用。且赠送的书券15天内有效，阅读时优先扣除赠送券。
2.书币充值比例为1元= 100书币
3.购买后，账户余额若长时间无变化，请致电书城客服0512-00000000，或者联系客服QQ：000000000"
            android:textColor="#595656"
            android:textSize="13sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="49dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>