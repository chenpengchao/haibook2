<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="设置支付宝提现账号"
                android:gravity="center"
               android:background="#F54337"
                android:textColor="@color/white"
                android:layout_height="40dp" />
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1px"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:background="#e8e8e8" />-->
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:text="请输入分组名称,最长10个汉字"-->
                <!--android:padding="5dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:layout_marginBottom="8dp"-->
                <!--android:gravity="center"-->
                <!--android:layout_height="wrap_content" />-->
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:id="@+id/et_pop_name"
                android:hint="请输入身份证真实姓名"
                android:gravity="center"
                android:maxLength="10"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_add_fenzu_bg"
                android:layout_height="40dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:id="@+id/et_alipay"
                android:layout_marginTop="5dp"
                android:hint="请输入支付宝账号"
                android:gravity="center"
                android:maxLength="10"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_add_fenzu_bg"
                android:layout_height="40dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:id="@+id/et_alipay_second"
                android:hint="请再次输入支付宝账号"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxLength="10"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_add_fenzu_bg"
                android:layout_height="40dp" />
            <View
                android:layout_width="match_parent"
                android:background="#e8e8e8"
                android:layout_marginTop="20dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="取消"
                    android:id="@+id/pop_tv_cancel"
                    android:textColor="#212121"
                    android:gravity="center"
                    android:layout_height="40dp" />

                <View
                    android:layout_width="1dp"
                    android:background="#e8e8e8"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="确定"
                    android:id="@+id/pop_tv_confirm"
                    android:textColor="#FD4444"
                    android:gravity="center"

                    android:layout_height="40dp" />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>